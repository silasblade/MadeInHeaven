@using Microsoft.AspNetCore.Identity
@using MadeinHeavenBookStore.Areas.Identity.Data
@inject SignInManager<MadeinHeavenBookStoreUser> SignInManager
@inject UserManager<MadeinHeavenBookStoreUser> UserManager
@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims


@using Blazored.Toast.Configuration

<PageTitle>MadeinHeavenBookStore</PageTitle>


<div class="container-menu-desktop">
	    <header>

	<!-- Topbar -->
	<div class="top-bar">
		<div class="content-topbar flex-sb-m h-full container">
			<div class="left-top-bar">
				Welcome to Made in Heaven Online Book Store
			</div>

			<div class="right-top-bar flex-w h-full">
					@if (IsUserAuthorizedAdmin || IsUserAuthorizedMod)
					{
						<a href="admin" class="flex-c-m trans-04 p-lr-25">
							Admin
						</a>
					}
					
				@* @* <a asp-controller="ProductManage" asp-action="ProductManage" class="flex-c-m trans-04 p-lr-25">
				Manage
				</a> *@






					<button class="flex-c-m trans-04 p-lr-25 text-light" @onclick="MyAccount">My Account</button>
				@* 					<form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
				<button id="logout" type="submit" class="nav-link btn btn-link text-light border-0"> Logout </button>
				</form> *@
			</div>
		</div>
	</div>

	<div class="wrap-menu-desktop">
		<nav class="limiter-menu-desktop container">

			<!-- Logo desktop -->
			<a href="#" class="logo">
				<img src="/images/icons/madeinheaven.png" alt="IMG-LOGO">
			</a>

			<!-- Menu desktop -->
			<div class="menu-desktop">
				<ul class="main-menu">
					<li class="active-menu">
						<a href="/" asp-action="Index">Home</a>
					</li>

					<li class="active-menu">
						<a href="/Shopping" asp-action="Shop">Shop</a>
					</li>
					@if(IsUserAuthorized)
						{
							<li>
								<a href="/orderlist">Order List</a>
							</li>
						}
						

					<li class="label1" data-label1="hot">
						<a href="/coupon">Coupon</a>
					</li>

					<li>
							<a href="/about">About</a>
					</li>

					<li>
							<a href="/contact">Contact</a>
					</li>
				</ul>
			</div>

			<!-- Icon header -->
			<div class="wrap-icon-header flex-w flex-r-m">
					@if (IsUserAuthorized)
					{
						<a href="/shopcart" class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11  js-show-cart" data-notify="2">
							<i class="zmdi zmdi-shopping-cart"></i>
						</a>

						<a href="/wishlist" class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11" data-notify="0">
							<i class="zmdi zmdi-favorite-outline"></i>
						</a>
					}
					
			</div>
		</nav>
	</div>

	</header>

	<div class="container">

	<main style="margin-top: 160px;">
        

        <article class="content px-4" >
            @Body
        </article>
    </main>
	</div>

</div>

<footer class="bg3 p-t-75 p-b-32">
	<div class="container">
		&copy; 2023 - MadeinHeavenBookStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
	</div>
</footer>
<BlazoredToasts Position="ToastPosition.BottomRight"
				Timeout="10"
				IconType="IconType.FontAwesome"
				SuccessClass="success-toast-override"
				SuccessIcon="fa fa-thumbs-up"
				ErrorIcon="fa fa-bug" />

		@code{
	private bool IsUserAuthorized;
	private bool IsUserAuthorizedAdmin;
	private bool IsUserAuthorizedMod;

	protected override async Task OnInitializedAsync()
	{
		var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
		IsUserAuthorizedMod = authState.User.IsInRole("Mod");
		IsUserAuthorizedAdmin = authState.User.IsInRole("Admin");
		IsUserAuthorized = authState.User.Identity.IsAuthenticated;
	}
	public void MyAccount()
	{
		NavigationManager.NavigateTo("/Identity/Account/Manage", true);
	}
		}