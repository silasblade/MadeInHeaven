	@code{
	public void ToShop()
	{
		NavigationManager.NavigateTo("Shop/Shop", true);
	}

	public void ToAbout()
	{
		NavigationManager.NavigateTo("About/About", true);
	}

	public void ToContact()
	{
		NavigationManager.NavigateTo("Contact/Contact", true);
	}
	}