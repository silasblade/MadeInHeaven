@using Microsoft.AspNetCore.Identity
@using MadeinHeavenBookStore.Areas.Identity.Data
@inject SignInManager<MadeinHeavenBookStoreUser> SignInManager
@inject UserManager<MadeinHeavenBookStoreUser> UserManager



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MadeinHeavenBookStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MadeinHeavenBookStore.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/images/icons/favicon.png" />
    <link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/iconic/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/linearicons-v1.0.0/icon-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/slick/slick.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/MagnificPopup/magnific-popup.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/perfect-scrollbar/perfect-scrollbar.css">
    <link rel="stylesheet" type="text/css" href="~/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
</head>
<body >
    <header>
		<div class="container-menu-desktop">
			<!-- Topbar -->
			<div class="top-bar">
				<div class="content-topbar flex-sb-m h-full container">
					<div class="left-top-bar">
						Free shipping for standard order over $100
					</div>

					<div class="right-top-bar flex-w h-full">
						@if (User.IsInRole("Mod") || User.IsInRole("Admin"))
						{
							<a href="admin" class="flex-c-m trans-04 p-lr-25">
								Admin
							</a>
							@* @* <a asp-controller="ProductManage" asp-action="ProductManage" class="flex-c-m trans-04 p-lr-25">
								Manage
							</a> *@ 
							
						}
						
						
				
						@if(User.Identity.IsAuthenticated)
						{
							
						
						<a id="manage" class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">My Account</a>
							<form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
								<button id="logout" type="submit" class="nav-link btn btn-link text-light border-0"> Logout </button>
							</form>
						}
					</div>
				</div>
			</div>

			<div class="wrap-menu-desktop">
				<nav class="limiter-menu-desktop container">

					<!-- Logo desktop -->
					<a href="#" class="logo">
						<img src="~/images/icons/madeinheaven.png" alt="IMG-LOGO">
					</a>

					<!-- Menu desktop -->
					<div class="menu-desktop">
						<ul class="main-menu">
							<li class="active-menu">
								<a href="/">Home</a>
							</li>

							<li class="active-menu">
								<a href="/Shopping">Shop</a>
							</li>
							@if (User.Identity.IsAuthenticated)
						{
							<li>
								<a href="/orderlist">Order List</a>
							</li>
						}
							<li class="label1" data-label1="hot">
								<a href="/coupon">Coupon</a>
							</li>

							<li>
								<a href="/about">About</a>
							</li>

							<li>
								<a href="/contact">Contact</a>
							</li>
						</ul>
					</div>

					<!-- Icon header -->
					<div class="wrap-icon-header flex-w flex-r-m">
						@if (User.Identity.IsAuthenticated)
						{
							
						
						<a href="/shopcart" class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11  js-show-cart" data-notify="2">
							<i  class="zmdi zmdi-shopping-cart"></i>
						</a>

						<a href="/wishlist" class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11" data-notify="0">
							<i class="zmdi zmdi-favorite-outline"></i>
						</a>
						}
					</div>
				</nav> 
			</div>
		</div>
    </header>


    <div class="container">

		<main role="main" class="pb-3" style="margin-top: 160px;">
            @RenderBody()
        </main>
    </div>

	<footer class="bg3 p-t-75 p-b-32">
		<div class="container">
			&copy; 2023 - MadeinHeavenBookStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<base href="~/" />
<script src="_framework/blazor.server.js"></script>

<BlazoredToasts />