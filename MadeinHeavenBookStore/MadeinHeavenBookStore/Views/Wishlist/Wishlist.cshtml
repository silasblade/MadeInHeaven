
@model List<Wishlist>
<h1>Your Wish List</h1>
<br />
<div class="row isotope-grid">
	@foreach (var product in Model)
	{
		<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
			<!-- Block2 -->
			<div class="block2">
				<div class="block2-pic hov-img0">
					<img src="@product.Product.imageurl1" alt="IMG-PRODUCT">


					<form method="post" asp-controller="Wishlist" asp-action="RemovefromWishlist" asp-route-id="@product.Id">
						<button class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04" type="submit">Remove From Wishlist</button>
					</form>

				</div>

				<div class="block2-txt flex-w flex-t p-t-14">
					<div class="block2-txt-child1 flex-col-l ">
						<a asp-controller="ProductDetail" asp-action="ProductDetail" asp-route-id="@product.Product.IdProduct" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
							@product.Product.NameProduct
						</a>

						<span class="stext-105 cl3">
							@product.Product.Price
						</span>
					</div>

	
				</div>
			</div>
		</div>
	}
</div>