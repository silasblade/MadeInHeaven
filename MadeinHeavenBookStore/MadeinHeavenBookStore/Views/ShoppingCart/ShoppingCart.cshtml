<div class="container">
	<div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
		<a href="index.html" class="stext-109 cl8 hov-cl1 trans-04">
			Home
			<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
		</a>

		<span class="stext-109 cl4">
			Shoping Cart
		</span>
	</div>
</div>

<style>
	.centered-button-container {
		display: flex;
		justify-content: center;
		align-items: center;
	}
</style>
<div class="centered-button-container">

	<button class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer" style="width: 200px;" id="toggleButton">Next Step</button>
	<br />
	<br />
</div>
<br />
<br />
<div id="blazor-app">
	<div id="shopiCart" class="component-container">
		<component type="typeof(ShopiCart)" render-mode="ServerPrerendered" />
	</div>
	<div id="orderCart" class="component-container" style="display:none;">
		<component type="typeof(OrderCart)" render-mode="ServerPrerendered" />
	</div>
</div>

<!-- Nút chuyển đổi giữa các component -->

<!-- Đoạn mã JavaScript để điều khiển hiển thị component -->
<script>
	document.getElementById('toggleButton').addEventListener('click', function () {
		var shopiCart = document.getElementById('shopiCart');
		var orderCart = document.getElementById('orderCart');

		if (shopiCart.style.display === 'none') {
			shopiCart.style.display = 'block';
			orderCart.style.display = 'none';
		} else {
			shopiCart.style.display = 'none';
			orderCart.style.display = 'block';
		}
	});
</script>

