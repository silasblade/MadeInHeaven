@page "/coupon"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@using MadeinHeavenBookStore.Models.ShipandCoupon
@using System.ComponentModel.DataAnnotations;
@using Microsoft.AspNetCore.Authorization;
@inject CouponService CouponService
@inject IToastService toastService
@using System.Security.Claims
@inject IJSRuntime JSRuntime

@inject AuthenticationStateProvider AuthenticationStateProvider



    <div class="container">
        <div class="row">
            <div class="col-lg-12 card-margin">
                <div class="card search-form">
                    <div class="card-body p-0">
                        <form @onsubmit="() => Search(search)" id="search-form">
                            <div class="row">
                                <div class="col-12">
                                    <div class="row no-gutters">
                                        <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                            <select @onchange="HandleSelection" name="percent" class="" id="exampleFormControlSelect1">
                                                <option>All</option>
                                                <option>Percent</option>
                                                <option>Direct Discount</option>
                                            </select>
                                        </div>
                                        <div class="col-lg-8 col-md-6 col-sm-12 p-0">
                                            <input type="text" placeholder="Search..." class="form-control" id="search" @bind="search">
                                        </div>
                                        <div class="col-lg-1 col-md-3 col-sm-12 p-0">
                                            <button type="submit" class="btn btn-base">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="background-color: #FFCCCC;">
            <div class="col-12">
                <div class="card card-margin">
                    <div class="card-body">
                        <div class="row search-body">
                            <div class="col-lg-12">
                                <div class="search-result">
                                        <div class="result-header">
                                            <div class="row">
                                                <div class="col-lg-6">
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="result-actions">
                                                        <div class="result-sorting">
                                                        </div>
                                                        
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="result-body">
                                            <div class="table-responsive">
                                                <table class="table widget-26">
                                                    <tbody>

                                                        @foreach (var item in Coupons)
                                                        {
                                                            <tr>

                                                                <td>
                                                                    <div style="display: none">
                                                                    <a name="Id" >@item.Id </a>
                                                                    </div>
                                                                    <div class="widget-26-job-title">
                                                                        <a name="Name">@item.Name </a>
                                                                        <p class="m-0">
                                                                            <a href="#" class="employer-name"></a>
                                                                            <span class="text-muted time">
                                                                            <a name="Description" > Descriptions: @item.Description</a>
                                                                            </span>
                                                                        </p>
                                                                    </div>
                                                                </td>
                                                                <td>
                                                                    <div class="widget-26-job-info">

                                                                    <a name="discount"> @item.discount @if (item.percent == true)
                                                                        {
                                                                            <a> % </a>
                                                                        }
                                                                        else
                                                                        {
                                                                            <a> VNĐ </a>
                                                                        } </a>
                                                   
                                                                    </div>
                                                                </td>
                                                                <td>
                                                                <div class="widget-26-job-salary"> <a name="remainnumber"> @item.remainnumber </a> discount left</div>
                                                                </td>
                                                            <td>
                                                             
                                                                    <div class="widget-26-job-category bg-soft-base">
                                                                         
                                                                        <i class="indicator bg-base"></i>
                                                                    <span>
                                                                        <div class="form-inline">
                                                                        <a style="margin-right: 25px;" type="text">@item.Code </a>
                                                                        </div>

                                                                        </span>
                                                                    </div>
                                                                </td>


                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>

                                </div>
                            </div>
                        </div>

     
                    </div>
                </div>
            </div>
        </div>
    </div>
}

